<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/border"
    >

    <ImageView
        android:id="@+id/tripicture"
        android:layout_width="275dp"
        android:layout_height="108dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvRecDarga"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="11dp"
        android:background="#67D3FA"
        android:text="דרגה"
        app:layout_constraintBottom_toTopOf="@+id/tvDateing"
        app:layout_constraintStart_toEndOf="@+id/tripicture"
        app:layout_constraintTop_toBottomOf="@+id/tvEzoring" />

    <TextView
        android:id="@+id/tvEzoring"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:background="#67D3FA"
        android:text="אזור הטיול"
        app:layout_constraintStart_toEndOf="@+id/tripicture"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDateing"
        android:layout_width="103dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="11dp"
        android:background="#67D3FA"
        android:text="תאריך"
        app:layout_constraintStart_toEndOf="@+id/tripicture"
        app:layout_constraintTop_toBottomOf="@+id/tvRecDarga" />

</androidx.constraintlayout.widget.ConstraintLayout>