<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="133dp"
        android:layout_marginTop="101dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvNameOfMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MACY IS A DOG"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAgeOfMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvNameOfMyProfile" />

    <TextView
        android:id="@+id/tvBio"
        android:layout_width="297dp"
        android:layout_height="55dp"
        android:layout_marginStart="47dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAgeOfMyProfile" />

    <ImageView
        android:id="@+id/ivFirst"
        android:layout_width="84dp"
        android:layout_height="89dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="205dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBio"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivSecond"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="205dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/ivFirst"
        app:layout_constraintStart_toEndOf="@+id/ivThird"
        app:layout_constraintTop_toBottomOf="@+id/tvBio"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivThird"
        android:layout_width="95dp"
        android:layout_height="84dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="205dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvBio"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>