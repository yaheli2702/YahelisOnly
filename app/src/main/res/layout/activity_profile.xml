<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profileActivity">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="131dp"
        android:layout_height="121dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="68dp"
        android:foreground="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/ic_menu_gallery" />

    <EditText
        android:id="@+id/etNameOfMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="name of user"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAgeOfMyProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="age of user"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameOfMyProfile" />

    <EditText
        android:id="@+id/etBio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="47dp"
        android:inputType="text"
        android:hint="information of user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAgeOfMyProfile" />

    <ImageView
        android:id="@+id/ivFirst"
        android:layout_width="84dp"
        android:layout_height="89dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:foreground="@drawable/border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBio"
        tools:srcCompat="@android:drawable/ic_menu_gallery" />

    <ImageView
        android:id="@+id/ivSecond"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="30dp"
        android:foreground="@drawable/border"
        app:layout_constraintEnd_toStartOf="@+id/ivFirst"
        app:layout_constraintHorizontal_bias="0.409"
        app:layout_constraintStart_toEndOf="@+id/ivThird"
        app:layout_constraintTop_toBottomOf="@+id/etBio"
        tools:srcCompat="@android:drawable/ic_menu_gallery" />

    <ImageView
        android:id="@+id/ivThird"
        android:layout_width="95dp"
        android:layout_height="84dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="36dp"
        android:foreground="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBio"
        tools:srcCompat="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/bReviews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="156dp"
        android:onClick="seeComents"
        android:text="reviews"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivSecond" />


</androidx.constraintlayout.widget.ConstraintLayout>