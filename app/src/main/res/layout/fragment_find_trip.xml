<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0F8F4"
    tools:context=".FindTrip">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tvezortiol"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="11dp"
            android:gravity="right"
            android:text="אזור הטיול" />

        <Spinner
            android:id="@+id/ezortiolspiner"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="1dp" />

        <TextView
            android:id="@+id/tvdargatiol"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="11dp"
            android:gravity="right"
            android:text="דרגת טיול" />

        <Spinner
            android:id="@+id/dargatiolspinner"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="1dp" />

        <TextView
            android:id="@+id/tvtimetiol"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="11dp"
            android:gravity="right"
            android:text="תאריך הטיול" />

        <Spinner
            android:id="@+id/timetiolpinner"
            android:layout_width="409dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:layout_marginTop="64dp"
            android:layout_marginEnd="1dp" />

        <Button
            android:id="@+id/search"
            android:layout_width="148dp"
            android:layout_height="36dp"
            android:layout_marginStart="124dp"
            android:layout_marginTop="36dp"
            android:backgroundTint="#13EDCD"
            android:text="חיפוש" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
/>


    </LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>



