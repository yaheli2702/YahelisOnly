<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0F8F4"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/password"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/edittext_mailpass"
        android:drawableLeft="@drawable/lock_pic"
        android:drawablePadding="8dp"
        android:ems="10"
        android:gravity="center"
        android:hint="סיסמא"
        android:inputType="textPassword"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <EditText
        android:id="@+id/email"
        android:layout_width="261dp"
        android:layout_height="50dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:gravity="center"
        android:hint="אימייל"
        android:inputType="text"
        android:padding="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/traveli"
        android:drawableLeft="@drawable/email_pic"
        android:drawablePadding="8dp"
        android:background="@drawable/edittext_mailpass"/>

    <Button
        android:id="@+id/signup"
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="128dp"
        android:backgroundTint="#54FDB8"
        android:onClick="signIn"
        android:text="התחבר"
        android:textColor="#1465C6"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <Button
        android:id="@+id/signin"
        android:layout_width="137dp"
        android:layout_height="60dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="14dp"
        android:text="חדש? הרשם"
        android:onClick="signUp"
        android:backgroundTint="#54FDB8"
        android:textColor="#1465C6"
        app:cornerRadius="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signup" />


    <ImageView
        android:id="@+id/traveli"
        android:layout_width="225dp"
        android:layout_height="213dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="93dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/travlelogo" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="148dp"
        android:layout_marginTop="8dp"
        android:text="forgot password?"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />

</androidx.constraintlayout.widget.ConstraintLayout>
