<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C0F8F4"
    tools:context=".Profil">

    <ImageView
        android:id="@+id/ivProfile2"
        android:layout_width="131dp"
        android:layout_height="121dp"
        android:layout_marginStart="132dp"
        android:layout_marginTop="68dp"
        android:foreground="@drawable/border"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@android:drawable/ic_menu_gallery" />

    <EditText
        android:id="@+id/etNameOfMyProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="name of user"
        android:layout_marginTop="258dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etAgeOfMyProfile2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="age of user"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="47dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etNameOfMyProfile2" />

    <EditText
        android:id="@+id/etBio2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="47dp"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="47dp"
        android:inputType="text"
        android:hint="information of user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etAgeOfMyProfile2" />

    <ImageView
        android:id="@+id/ivFirst2"
        android:layout_width="84dp"
        android:layout_height="89dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="205dp"
        android:foreground="@drawable/border"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBio2" />

    <ImageView
        android:id="@+id/ivSecond2"
        android:layout_width="90dp"
        android:layout_height="87dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="52dp"
        android:foreground="@drawable/border"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintEnd_toStartOf="@+id/ivFirst2"
        app:layout_constraintHorizontal_bias="0.196"
        app:layout_constraintStart_toEndOf="@+id/ivThird2"
        app:layout_constraintTop_toBottomOf="@+id/etBio2" />

    <ImageView
        android:id="@+id/ivThird2"
        android:layout_width="84dp"
        android:layout_height="89dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="55dp"
        android:foreground="@drawable/border"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etBio2" />

    <ImageView
        android:id="@+id/ivEdit2"
        android:layout_width="48dp"
        android:layout_height="43dp"
        android:layout_marginTop="232dp"
        android:src="@android:drawable/ic_menu_edit"
        android:layout_marginEnd="32dp"
        app:layout_constraintEnd_toStartOf="@+id/ivProfile2"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvSave"
        android:layout_width="30dp"
        android:layout_height="22dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="24dp"
        android:text="save"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivThird2" />

    <Button
        android:id="@+id/bsignout"
        android:layout_width="91dp"
        android:layout_height="37dp"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="36dp"
        android:backgroundTint="#13EDCD"
        android:text="sign out"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>