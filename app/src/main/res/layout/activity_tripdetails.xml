<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".tripdetails">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:layout_marginBottom="13dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/choosepic"
                android:layout_width="match_parent"
                android:layout_height="271dp"
                app:srcCompat="@drawable/backgroundpic" />

            <TextView
                android:id="@+id/tvNameOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="שם המסלול: " />

            <TextView
                android:id="@+id/tvDetailOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="פרטי הטיול: "
                android:textDirection="rtl"></TextView>


            <TextView
                android:id="@+id/tvDateOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="תאריכים: " />
            <TextView
                android:id="@+id/tvplaceOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="מקום טיול: " />
            <TextView
                android:id="@+id/tvAreaOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="אזור טיול: " />



            <TextView
                android:id="@+id/tvDargaOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="דרגת טיול: " />


            <TextView
                android:id="@+id/tvKmOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="מספר קילומטרים: " />

            <TextView
                android:id="@+id/tvTimeOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="זמן (בשעות): " />
            <TextView
                android:id="@+id/tvMaxNumberOfTravelers"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="מספר מקסימלי של מטיילים: " />
            <TextView
                android:id="@+id/tvOwnerOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="מנהלת הטיול: " />

            <TextView
                android:id="@+id/tvParticipentsOfTrip"
                android:layout_width="match_parent"
                android:layout_height="17dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="11dp"
                android:gravity="right"
                android:text="משתתפים: " />


            <ListView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/lvUsers"/>

            <Button
                android:id="@+id/iWant"
                android:layout_width="148dp"
                android:layout_height="79dp"
                android:layout_marginStart="124dp"
                android:layout_marginTop="36dp"
                android:backgroundTint="#13EDCD"
                android:onClick="addmetothetriplist"
                android:text="אני רוצה להצטרף! צרפו אותי" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>